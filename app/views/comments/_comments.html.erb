<h2><%= Comment.model_name.human %></h2>
<% if comments.any? %>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <p>
        <strong><%= Comment.human_attribute_name(:content) %>:</strong> <%= comment.content %>
      </p>
      <p>
        <strong><%= User.model_name.human %>: </strong>
        <% if comment.user.name.empty? %>
          <%= comment.user.email %>
        <% else %>
          <%= comment.user.name %>
        <% end %>
      </p>
      <p>
        <strong><%= Comment.human_attribute_name(:created_at) %>:</strong> <%= comment.created_at %>
      </p>
      <% if current_user == comment.user %>
        <%= link_to t('views.common.edit'), edit_polymorphic_path([commentable, comment]) %> |
        <%= link_to t('views.common.destroy'), polymorphic_path([commentable, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <p>
    <%= t('views.common.any', name: Comment.model_name.human) %>
  </p>
<% end %>
